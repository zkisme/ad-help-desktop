{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:default",
    "dialog:default",
    "fs:allow-app-write",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA/*",
          "access": "read-write"
        }
      ]
    }
  ]
}